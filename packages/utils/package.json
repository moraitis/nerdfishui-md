{
  "license": "MIT",
  "version": "1.3.0",
  "name": "@moraitis/utils",
  "description": "Modified version of the nerdfishui package for use on moraitis design projects.",
  "author": {
    "name": "Tim Moraitis",
    "email": "tim@moraitisdesign.com"
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/moraitis/nerdfishui-md.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/moraitis",
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint:src": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:types": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "run-s lint:*"
  },
  "devDependencies": {
    "@moraitis/tsconfig": "workspace:*",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.53.0",
    "eslint-config-daren": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  }
}
